<?xml version="1.0" encoding="UTF-8"?>

<Configuration
        status="warn">
    <Appenders>
        <Console
                name="Console"
                target="System.out">
            <PatternLayout
                    pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <File name="canteen-service.log" fileName="/logs/canteen-service.log">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </File>
    </Appenders>
    <Loggers>
        <Logger name="com.example.menu" level="info" />
        <Root level="warn">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>

</Configuration>